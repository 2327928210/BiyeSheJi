<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="8dp">
        <ImageView
            android:id="@+id/find_listview_item_imageview3"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:src="@drawable/loading"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/find_listview_item_text3"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:layout_alignTop="@+id/find_listview_item_imageview3"
            android:textSize="15dp"
            android:textColor="#333"
            />
        <ImageView
            android:id="@+id/find_listview_item_image4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_read_num"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/find_listview_item_text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaaa"
            android:textColor="#aaa"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/find_listview_item_image4"
            android:layout_alignBottom="@+id/find_listview_item_image4"/>
        </RelativeLayout>
        <View
            android:layout_below="@+id/relativelayout1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#dddddd"/>
</RelativeLayout>


