<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="3dp"
    android:paddingTop="3dp">
    <TextView
        android:id="@+id/find_headview_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:text="热榜推荐"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/find_headView_viewPager"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/find_headview_text1">
    </android.support.v4.view.ViewPager>
    <TextView
        android:id="@+id/find_headview_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/find_headView_viewPager"
        android:textColor="#333"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:text="我的订阅"
        />
    <TextView
        android:id="@+id/find_headview_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/find_headview_text2"
        android:layout_alignParentRight="true"
        android:textColor="#ffd700"
        android:textSize="15dp"
        android:text="更多订阅 >"/>
    <com.example.haier.sheji.view.CircleIndicator
        android:id="@+id/find_headView_indicator"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        app:ci_background="@color/colorPrimary"
        app:ci_selected_background="@color/radiobutton_textcolor"
        />
</RelativeLayout>
