<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/find_listview_item_imageview1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/find_listview_item_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微8条"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/find_listview_item_imageview1"
            android:textSize="17sp"
            android:textColor="#111"/>
        <ImageView
            android:id="@+id/find_listview_item_imageview2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_toLeftOf="@+id/find_listview_item_text2"
            android:layout_alignBottom="@+id/find_listview_item_text1"
            android:src="@drawable/subscription_num"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/find_listview_item_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="1149"
            android:textSize="12sp"
            android:textColor="#aaa"
            android:layout_alignBottom="@+id/find_listview_item_text1"/>

    </RelativeLayout>

</RelativeLayout>
