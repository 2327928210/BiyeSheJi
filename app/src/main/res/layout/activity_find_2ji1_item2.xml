<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/find_2ji1_item2_image"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@drawable/loading"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/find_2ji1_item2_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textColor="#333"
        android:layout_below="@+id/find_2ji1_item2_image"
        android:text="aaaaaaaa"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"/>
    <TextView
        android:id="@+id/find_2ji1_item2_text2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_below="@+id/find_2ji1_item2_text1"
        android:text="aaaaaaaa"
        android:drawableLeft="@drawable/icon_read_num"
        android:layout_marginLeft="20dp" />


</RelativeLayout>
