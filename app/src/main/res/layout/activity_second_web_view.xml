<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:requiresFadingEdge="none"
    xmlns:android="http://schemas.android.com/apk/res/android" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second_web_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  android:orientation="vertical"
    tools:context="com.app.zhangzhaoqiang.theheadlines.Home_Fragment_First.HotFragment.Hot_Fragment_Second.SecondWebViewActivity">
<ImageView
    android:id="@+id/Html_Hot_img_src"
    android:scaleType="centerCrop"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:src="@drawable/ceshi"/>
    <TextView
        android:id="@+id/Html_Hot_title"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="作为深圳高端大气上档次的代名词，一直是龙华的小伙伴的逛街圣地"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/Html_Hot_head_img"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ceshi"/>
        <TextView
            android:id="@+id/Html_Hot_nickname"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Fan — 微小编"/>
        <TextView
            android:id="@+id/Html_Hot_pubtime"
            android:text="2016-12-24"
            android:layout_marginLeft="130dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </LinearLayout>
    <TextView
        android:id="@+id/Html_Hot_content"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarFadeDuration="2000"
        android:text="没错，因为几家店的原因一圆不和就搞活动在，要被人山人还级炸了"/>
</LinearLayout>
</ScrollView>